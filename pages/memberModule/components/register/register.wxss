view,
cover-view,
cover-image,
text,
swiper,
swiper-item,
input,
picker,
textarea,
form {
  box-sizing: border-box;
  word-break: break-all;
}
.ant-register-wrapper {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}
.ant-register-wrapper button {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0;
  margin: 0;
  border-radius: 0;
}
.ant-register-wrapper button::after {
  border-radius: 0;
  border: none;
}
.ant-register-wrapper .mask-area {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}
.ant-register-wrapper .content-area {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 630rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.ant-register-wrapper .content-area .btns-box .btn-success {
  width: 380rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #2c5596;
  border: 2rpx solid #4a6ba1;
  background: transparent;
  margin: 56rpx auto 0 auto;
}
.ant-register-wrapper .content-area .btns-box .btn-cancel {
  width: max-content;
  background: transparent;
  font-size: 32rpx;
  color: #4a6ba1;
  padding-bottom: 6rpx;
  border-bottom: 1rpx solid #4a6ba1;
  margin: 30rpx auto 0 auto;
}
.ant-register-wrapper .content-area .rule-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 24rpx;
  padding: 50rpx 30rpx;
  color: #92bc39;
}
.ant-register-wrapper .content-area .rule-box .icon-select {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-top: 1rpx;
}
.ant-register-wrapper .content-area .rule-box .rule-chunk {
  flex: 1;
  line-height: 32rpx;
}
.ant-register-wrapper .content-area .close-box {
  position: absolute;
  left: 50%;
  bottom: -80rpx;
  transform: translateX(-50%);
  width: 56rpx;
  height: 56rpx;
}
.ant-register-wrapper .content-area .close-box image {
  width: 100%;
  height: 100%;
}
