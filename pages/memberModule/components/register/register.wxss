.ant-register-wrapper {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  box-sizing: border-box;
  word-break: break-all;
}
.ant-register-wrapper view,
.ant-register-wrapper cover-view,
.ant-register-wrapper cover-image,
.ant-register-wrapper text,
.ant-register-wrapper swiper,
.ant-register-wrapper swiper-item,
.ant-register-wrapper input,
.ant-register-wrapper picker,
.ant-register-wrapper textarea,
.ant-register-wrapper form {
  box-sizing: border-box;
  word-break: break-all;
}
.ant-register-wrapper button {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0;
  margin: 0;
  border-radius: 0;
}
.ant-register-wrapper button::after {
  border-radius: 0;
  border: none;
}
.ant-register-wrapper .mask-area {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}
.ant-register-wrapper .content-area {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 630rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.ant-register-wrapper .content-area .logo {
  width: 100%;
  height: 326rpx;
}
.ant-register-wrapper .content-area .rule-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 24rpx;
  padding: 30rpx;
  color: #a63286;
}
.ant-register-wrapper .content-area .rule-box .icon-select {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
  margin-top: 6rpx;
}
.ant-register-wrapper .content-area .rule-box .rule-chunk {
  flex: 1;
  line-height: 40rpx;
}
.ant-register-wrapper .content-area .rule-box .rule-chunk .rule {
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #a63286;
}
.ant-register-wrapper .content-area .btns-box .btn-success {
  width: 232rpx;
  height: 61rpx;
  font-size: 32rpx;
  border-radius: 6rpx;
  color: #ffffff;
  background: #a63286;
  margin: 12rpx auto 0 auto;
}
.ant-register-wrapper .content-area .btns-box .btn-cancel {
  width: max-content;
  background: transparent;
  font-size: 32rpx;
  color: #96326c;
  border-bottom: 1rpx solid #96326c;
  margin: 28rpx auto 70rpx auto;
}
.ant-register-wrapper .content-area .close-box {
  position: absolute;
  left: 50%;
  bottom: -80rpx;
  transform: translateX(-50%);
  width: 56rpx;
  height: 56rpx;
}
.ant-register-wrapper .content-area .close-box image {
  width: 100%;
  height: 100%;
}
