/**
* 样式命名规范：
* 容器层级 container > wrapper > area > box > chunk
*/
page {
  width: 100%;
  height: 100%;
  line-height: normal;
  background-color: #fff;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

image {
  display: block;
}

.container {
  width: 100%;
  min-height: 100%;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  font-family: Arial, Helvetica, sans-serif;
}

.content-wrapper {
  position: relative;
}

.img-area {
  width: 750rpx;
  height: 560rpx;
}

.content-area {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 131rpx;
  overflow: hidden;
}

.content-box{
  width: 100%;
  height: 131rpx;
  padding: 0 60rpx 0 50rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.content-box .remark{
  font-size: 30rpx;
  font-weight: bold;
  color: #543590;
}

.record-box2{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.record-box2 .record-num{
  font-size: 48rpx;
  color: #543590;
  font-weight: bold;
}

.record-box2 .record-txt{
  font-size: 26rpx;
  color: #543590;
  margin-top: 8rpx;
}

.share_white_bg{
  width: 100%;
  height: 171rpx;
}

.remark-area{
  position: absolute;
  left: 50rpx;
  bottom: 270rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 36rpx;
  color: #fff;
}

.remark-area text:first-child{
  font-weight: bold;
}

.num-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  overflow: hidden;
  border: 10rpx solid transparent;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);

}

.img-chunk {
  display: block;
  width: 160rpx;
  height: 160rpx;
}

.record-box {
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.line-chunk {
  width: 2rpx;
  background-color: rgba(204, 202, 203, 0.7);
}

.record-chunk {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #535353;
  font-size: 28rpx;
}

.record-block {
  margin-top: 20rpx;
  color: #eb9596;
  font-size: 60rpx;
  font-weight: bold;
}

.pictext-wrapper {
  position: relative;
  background-color: #fff;
  -webkit-border-radius: 0;
  border-radius: 0;
  border-top-right-radius: 15rpx;
  -webkit-border-top-right-radius: 15rpx;
  border-top-left-radius: 15rpx;
  -webkit-border-top-left-radius: 15rpx;
  display: flex;
  flex-direction: column;
  padding-bottom: 250rpx;
}

.pictext-area {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 35rpx 0 50rpx;
  color: #0052a1;
  font-size: 34rpx;
  font-weight: bold;
  border-bottom: 2rpx solid #ddd;
}

.pictext-area .lf{
  display: flex;
  flex-direction: row;
  justify-content: flex-start; 
  align-items: center;
}

.pictext-area .btn-rg{
  width: 160rpx;
  height: 60rpx;
  font-size: 26rpx;
  color: #295b9e;
  background: #fff;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 2rpx solid #295b9e;
}

.pictext-area image {
  width: 35rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.pictext-area text {
  font-size: 26rpx;
  color: #909090;
  margin-left: 6rpx;
}

.items-area {
  min-height: 360rpx;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}

.memeber-box {
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx dashed #e9ecee;
}

.icon-chunk {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #6f7e87;
  font-size: 36rpx;
  font-weight: 600;
}

.icon-chunk image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 55rpx;
  /* margin-left: 20rpx; */
  margin-right: 26rpx;
}

.icon-chunk text{
	width: 260rpx;
}

.time-chunk {
  color: #a2abb0;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.btn-wrapper{
  width: 100%;
  height: 180rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 2rpx solid #ccc;
}

.btn-area {
  width: 601rpx;
  height: 81rpx;
  line-height: 81rpx;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  background: #0b5d9b;
  border-radius: 10rpx;
}

.no-area {
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}

.no-box {
  width: 88rpx;
  height: 104rpx;
}

.tips-box {
  margin-top: 30rpx;
  color: #cccccc;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.rule-box{
  width: 100%;
  position: fixed;
  bottom: 180rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.rule-box text{
  font-size: 30rpx;
  color: #2c5596;
  line-height: 55rpx;
  border-bottom: 2rpx solid #2c5596;
  margin: 30rpx 0 62rpx;
  font-weight: bold;
}

button {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0;
  margin: 0;
  border-radius: 0;
}

button::after {
  border-radius: 0;
  border: none;
}

.hidden-e {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}